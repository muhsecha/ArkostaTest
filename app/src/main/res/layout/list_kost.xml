<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_kost"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_kostRoom"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/room"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/tv_kostType"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_kost_type"
                    android:layout_marginLeft="10dp"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp"
                    android:gravity="center"
                    android:text="Campur"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>
                <ImageView
                    android:id="@+id/btn_fav"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/fav"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/iv_kostRoom"
                app:layout_constraintBottom_toBottomOf="@+id/iv_kostRoom"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_stars"
                android:paddingVertical="5dp"
                android:paddingHorizontal="8dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_baseline_star_24"/>
                <TextView
                    android:id="@+id/tv_kostStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="4.7"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/iv_kostRoom"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_kostName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kost Perumahan Indah"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/gotham_pro"/>
                <TextView
                    android:id="@+id/tv_kostLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_kostName"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Tersisa 3 Kamar"
                    android:textSize="13sp"
                    android:fontFamily="@font/gotham_pro"/>
                <LinearLayout
                    android:id="@+id/ln_kost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_kostLocation"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_baseline_location_on_24"/>
                    <TextView
                        android:id="@+id/tv_kostAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="top"
                        android:text="Jl. Malboro Utara"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/gotham_pro"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_kostPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 1.400.000/"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:fontFamily="@font/gotham_pro"/>
                    <TextView
                        android:id="@+id/tv_kostPriceDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bulan"
                        android:textColor="@color/blue"
                        android:textSize="13sp"
                        android:fontFamily="@font/gotham_pro"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>